<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_7"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="30dp">

            <android.support.v7.widget.CardView
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_header"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/thumbnail_header"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/gradient_7"
                    android:scaleType="centerCrop" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Light Panel"
                    android:textSize="26sp"
                    android:layout_gravity="bottom"
                    android:paddingLeft="50dp"/>

                <ImageView
                    android:id="@+id/thumbnail_header_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_light"
                    android:tint="@color/white">

                </ImageView>


            </android.support.v7.widget.CardView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:padding="5dp"
            >
            <android.support.v7.widget.CardView
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_light"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="wrap_content"

                >

                <ImageView
                    android:id="@+id/thumbnail_light_consumption"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/gradient_7"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iconLightConsumption"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_lightning"
                    android:tint="@color/white"

                    />

                <TextView
                    android:id="@+id/textViewLightConsumption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_gravity="bottom|center"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_light_total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                >

                <ImageView
                    android:id="@+id/thumbnail_light_total"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:background="@drawable/gradient_2"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/iconLightTotal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_light"
                    android:tint="@color/white"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewLightTotal"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_gravity="bottom|center"
                    />
            </android.support.v7.widget.CardView>


        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:padding="5dp"

            >
            <android.support.v7.widget.CardView
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_living"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/thumbnail_living"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/gradient_7"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textViewLivingTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Living Room"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewLiving"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_gravity="bottom|center"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_bedroom"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/thumbnail_bedroom"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/gradient_7"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textViewBedroomTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bedroom"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewBedroom"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_gravity="bottom|center"
                    />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_kitchen"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/thumbnail_kitchen"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/gradient_7"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textViewKitchenTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kitchen"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewKitchen"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_gravity="bottom|center"
                    />
            </android.support.v7.widget.CardView>
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:paddingEnd="12dp"
            android:paddingStart="12dp"
            android:padding="5dp"

            >
            <android.support.v7.widget.CardView
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_bathroom"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/thumbnail_bathroom"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/gradient_7"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textViewLivingBathroom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bathroom"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewBathroom"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_gravity="bottom|center"
                    />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_garage"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/thumbnail_garage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/gradient_7"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textViewGarageTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Garage"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewGarage"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_gravity="bottom|center"
                    />
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:cardView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_entrance"
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/thumbnail_entrance"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/gradient_7"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/textViewEntranceTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrance"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewEntrance"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_gravity="bottom|center"
                    />
            </android.support.v7.widget.CardView>
        </TableRow>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnVoice"
            android:layout_width="wrap_content"
            app:fabSize="normal"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_voice"
            android:tint="@color/white"
            android:background="@drawable/gradient_1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/tap_on_mic"
            android:textColor="@color/white"
            android:paddingBottom="10dp"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="normal" />

    </TableLayout>

</LinearLayout>